{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "本番用tar.gzファイル作成",
      "detail": "本番用にtar.gzファイルを作成します（作成先：/project/build.tar.gz）",
      "icon": {
        "color": "terminal.ansiBlue",
        "id": "package"
      },
      "type": "shell",
      "command": "tar",
      "args": [
        "cvfz",
        "${workspaceFolder}/project/build.tar.gz",
        "-T",
        "${workspaceFolder}/project/buildlist.txt"
      ],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "clear": true,
        "echo": true
      },
      "problemMatcher": [],
      "windows": {
        "command": "tar",
        "args": [
          "cvfz",
          "${workspaceFolder}\\project\\build.tar.gz",
          "-T",
          "${workspaceFolder}\\project\\buildlist.txt"
        ]
      }
    }
  ]
}
