{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "[01] Next.js: サーバーサイド起動",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "[02] Next.js: クライアントサイド起動",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "[03] Next.js: サーバー＋クライアント起動",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "pattern": "- Local:.+ (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome",
        "killOnServerStop": true
      }
    },
    {
      "name": "[04] WebSocketテスト用サーバー起動",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test/customServer/webSocketTestServer.js",
      "windows": {
        "program": "${workspaceFolder}\\test\\customServer\\webSocketTestServer.js"
      }
    }
  ],
  "compounds": [
    {
      "name": "[05] サーバー＋クライアント＋WebSocketテスト用サーバー起動",
      "configurations": [
        "[03] Next.js: サーバー＋クライアント起動",
        "[04] WebSocketテスト用サーバー起動"
      ],
      "stopAll": true
    }
  ]
}
